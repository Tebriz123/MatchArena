@model PutTeamVM
<main>
    <div class="form-container">
        <h1 class="section-title">Komandanı Yenilə</h1>
        <p class="section-subtitle">Komanda məlumatlarını redaktə edin</p>

        <form class="create-form" id="updateTeamForm">
            <div class="form-section">
                <h3 class="form-section-title">Əsas Məlumatlar</h3>

                <div class="form-group">
                    <label asp-for="Name" class="form-label">Team Name*</label>
                    <input asp-for="Name" class="form-input" placeholder="Name">
                    <span asp-validation-for="Name"></span>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="CaptainName" class="form-label">Captain Name *</label>
                        <input asp-for="CaptainName" class="form-input" placeholder="Captain Name">
                        <span asp-validation-for="CaptainName"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="City" class="form-label">City *</label>
                        <input asp-for="City" class="form-input" placeholder="City">
                        <span asp-validation-for="CaptainName"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Photo">Team Logo</label>
                    <input asp-for="Photo" id="playerImage" class="form-input" accept="image/*">
                    <span asp-validation-for="Photo"></span>
                </div>
            </div>

            <div class="form-section">
                <h3 class="form-section-title">Komanda Statistikası</h3>

                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="PlayerCount" class="form-label">Cari Oyunçu Sayı *</label>
                        <input asp-for="PlayerCount" class="form-input">
                        <span asp-validation-for="PlayerCount"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="MaxPlayer" class="form-label">Maksimum Oyunçu *</label>
                        <input asp-for="MaxPlayer" class="form-input">
                        <span asp-validation-for="MaxPlayer"></span>
                    </div>
                </div>
            </div>

            <div class="form-section">
                <h3 class="form-section-title">Əlavə Məlumatlar</h3>

                <div class="form-group">
                    <label asp-for="Information" class="form-label">Information</label>
                    <textarea asp-for="Information" class="form-textarea" rows="4" placeholder="Komanda haqqında məlumat yazın..."></textarea>
                    <span asp-validation-for="Information"></span>
                </div>
            </div>

            <div class="form-actions">
                <button type="button" class="btn btn-secondary" onclick="window.location.href='teams.html'">Ləğv et</button>
                <button type="submit" class="btn btn-primary">Dəyişiklikləri Yadda Saxla</button>
            </div>
        </form>
    </div>
</main>