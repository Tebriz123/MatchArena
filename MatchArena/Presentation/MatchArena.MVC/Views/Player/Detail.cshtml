@model GetPlayerVM


<main class="player-detail-main">
    <a href="players.html" class="back-link">← Oyunçulara qayıt</a>

    <div class="player-profile-card">
        <div class="player-profile-grid">
            <div class="player-avatar-large">N</div>

            <div class="player-profile-info">
                <h1>@Model.Name @Model.Surname</h1>
                <p>Qapiçi • 30 yaş</p>

                <div class="player-stats-row">
                    <div class="stat-box stat-box-green">
                        <div class="stat-box-label">Reytinq</div>
                        <div class="stat-box-value stat-box-value-green">⭐ @Model.Rating</div>
                    </div>
                    <div class="stat-box stat-box-blue">
                        <div class="stat-box-label">Oyunlar</div>
                        <div class="stat-box-value stat-box-value-blue">@Model.GameCount</div>
                    </div>
                    <div class="stat-box stat-box-orange">
                        <div class="stat-box-label">Şəhər</div>
                        <div class="stat-box-value stat-box-value-orange">🏠 @Model.City</div>
                    </div>
                </div>

                <div class="player-action-buttons">
                    <button class="btn-invite">Komandaya Dəvət Et</button>
                    <button class="btn-message">Mesaj Göndər</button>
                </div>
            </div>
        </div>
    </div>

    <div class="detail-columns">
        <!-- Left Column -->
        <div>
            <div class="detail-card">
                <h2>Şəxsi Məlumatlar</h2>

                <div class="detail-row">
                    <span class="detail-row-label">Komanda</span>
                    <span class="detail-row-value">Qarabag</span>
                </div>

                <div class="detail-row">
                    <span class="detail-row-label">Vəzifə</span>
                    <span class="detail-row-value">Qapiçi</span>
                </div>

                <div class="detail-row">
                    <span class="detail-row-label">Yaş</span>
                    <span class="detail-row-value">30</span>
                </div>

                <div class="detail-row">
                    <span class="detail-row-label">Şəhər</span>
                    <span class="detail-row-value">Baki</span>
                </div>
            </div>

            <div class="detail-card">
                <h2>Statistika</h2>

                <div class="detail-row">
                    <span class="detail-row-label">Oyunlar</span>
                    <span class="detail-row-value-large">312</span>
                </div>

                <div class="detail-row">
                    <span class="detail-row-label">Qollar</span>
                    <span class="detail-row-value-large">156</span>
                </div>

                <div class="detail-row">
                    <span class="detail-row-label">Köməkçiliklər</span>
                    <span class="detail-row-value-large">89</span>
                </div>
            </div>
        </div>

        <!-- Right Column -->
        <div>
            <div class="detail-card">
                <h2>Fəaliyyətlər</h2>

                <div class="achievements-list">
                    <div class="achievement-item">
                        <div class="achievement-title">On yaxşı qapıçı</div>
                        <div class="achievement-description">2024 Fəaliyyət Mükafatı</div>
                    </div>

                    <div class="achievement-item">
                        <div class="achievement-title">Clean sheet rekordu</div>
                        <div class="achievement-description">Ardıcıl 8 oyun qol yemədən</div>
                    </div>
                </div>
            </div>

            <div class="detail-card">
                <h2>Rəylər</h2>
                <p class="reviews-subtitle">67 rəy (⭐ 4.9 ortalama)</p>

                <div class="reviews-list">
                    <div class="review-item">
                        <div class="review-avatar review-avatar-green">A</div>
                        <div>
                            <div class="review-author">Aydın M.</div>
                            <div class="review-text">Açıq şəhərət, heç vaxt qol yemə</div>
                        </div>
                    </div>

                    <div class="review-item">
                        <div class="review-avatar review-avatar-blue">E</div>
                        <div>
                            <div class="review-author">Eldar H.</div>
                            <div class="review-text">Şəhərət komanda üstün görmə oyunçusu</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
