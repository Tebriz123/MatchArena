@using MatchArena.Domain.Entities

@model GetPlayerItemVM

<main>
    <h1 class="section-title">Oyunçular</h1>

    <div class="cards-grid">
    @foreach (Player player in Model.Players)
        {
            <a href="player-detail.html?id=@player.Id" class="player-card">
                <div class="card-image"><img src="~/assets/img/players/@player.Image" alt="@player.Name @player.Surname"><div class="rating">⭐ @player.Rating</div></div>
                <div class="card-content">
                    <div class="team-badge">Oyunçu axtarır</div>
                    <h3 class="card-title">@player.Name</h3>
                    <div class="card-subtitle">@player.Age yaş • 🏠 @player.City</div>
                    <div class="card-stats">
                        <div class="stat-item"><div class="stat-item-value">312</div><div class="stat-item-label">oyun</div></div>
                        <div class="stat-item"><div class="stat-item-value">156</div><div class="stat-item-label">qol</div></div>
                        <div class="stat-item"><div class="stat-item-value">89</div><div class="stat-item-label">asist</div></div>
                    </div>
                    <div class="card-buttons"><span class="btn-small">Profil bax</span></div>
                </div>
            </a>
        }
    </div>
</main>