@model PostTournamentVM
<main>
    <div class="form-container">
        <h1 class="section-title">Yeni Turnir Yarat</h1>
        <p class="section-subtitle">Yeni turnir təşkil edin və idarə edin</p>

        <form class="create-form" id="createTournamentForm">
            <div class="form-section">
                <h3 class="form-section-title">Əsas Məlumatlar</h3>

                <div class="form-group">
                    <label asp-for="Name" class="form-label">Tournament Name *</label>
                    <input asp-for="Name" class="form-input" placeholder="Tournament Name">
                    <span asp-validation-for="Name"></span>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="Address" class="form-label">Address *</label>
                        <input asp-for="Address" class="form-input" placeholder="Addrress">
                        <span asp-validation-for="Address"></span>
                    </div>

                  
                </div>

                <div class="form-group">
                    <label asp-for="Photo" class="form-label">Tournament Image</label>
                    <input asp-for="Photo" class="form-input" accept="image/*">
                    <span asp-validation-for="Photo"></span>
                </div>
            </div>

            <div class="form-section">
                <h3 class="form-section-title">Tarix və Vaxt</h3>

                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="StartTime" class="form-label">Start Time *</label>
                        <input asp-for="StartTime" class="form-input">
                        <span asp-validation-for="StartTime"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="EndTime" class="form-label">End Time *</label>
                        <input asp-for="EndTime" class="form-input">
                        <span asp-validation-for="EndTime"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="RegistrationDeadline" class="form-label">Registration Deadline *</label>
                        <input asp-for="RegistrationDeadline" class="form-input" required>
                        <span asp-validation-for="RegistrationDeadline"></span>
                    </div>
                </div>
            </div>

            <div class="form-section">
                <h3 class="form-section-title">Turnir Parametrləri</h3>

                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="CurrentTeams" class="form-label">Cari Komanda Sayı *</label>
                        <input asp-for="CurrentTeams" class="form-input" >
                        <span asp-validation-for="CurrentTeams"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="MaxTeams" class="form-label">Max Teams *</label>
                        <input asp-for="MaxTeams" class="form-input">
                        <span asp-validation-for="MaxTeams"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="EntryFee" class="form-label">Giriş Haqqı (₼)</label>
                        <input asp-for="EntryFee" class="form-input" placeholder="0">
                        <span asp-validation-for="EntryFee"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="PrizeFund" class="form-label">Mükafat Fondu (₼)</label>
                        <input asp-for="PrizeFund" class="form-input" placeholder="0">
                        <span asp-validation-for="PrizeFund"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label for="format" class="form-label">Turnir Formatı *</label>
                    <select id="format" name="format" class="form-input" required>
                        <option value="">Format seçin</option>
                        <option value="knockout">Kubok (Playoff)</option>
                        <option value="league">Liqa (Dövri)</option>
                        <option value="group">Qrup + Playoff</option>
                        <option value="swiss">İsveçrə sistemi</option>
                    </select>
                </div>

       
            </div>

            <div class="form-section">
                <h3 class="form-section-title">Əlavə Məlumatlar</h3>

                <div class="form-group">
                    <label for="status" class="form-label">Status *</label>
                    <select id="status" name="status" class="form-input" required>
                        <option value="registration">Qeydiyyat açıq</option>
                        <option value="upcoming">Gözlənilir</option>
                        <option value="ongoing">Davam edir</option>
                        <option value="completed">Başa çatdı</option>
                    </select>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="form-label">Təsvir</label>
                    <textarea asp-for="Description" class="form-textarea" rows="5" placeholder="Turnir haqqında ətraflı məlumat yazın..."></textarea>
                </div>

                <div class="form-group">
                    <label for="rules" class="form-label">Qaydalar</label>
                    <textarea id="rules" name="rules" class="form-textarea" rows="4" placeholder="Turnir qaydalarını yazın..."></textarea>
                </div>
            </div>

            <div class="form-actions">
                <button type="button" class="btn btn-secondary" onclick="window.location.href='tournaments.html'">Ləğv et</button>
                <button type="submit" class="btn btn-primary">Turnir Yarat</button>
            </div>
        </form>
    </div>
</main>
