@model GetTournamentVM
@{
    int EmptySpace = Model.MaxTeams - Model.CurrentTeams;
}
<main class="detail-main-container">
    <a href="tournaments.html" class="back-link">← Turnirlərə qayıt</a>

    <!-- Tournament Header -->
    <div class="tournament-header-card">
        <div class="tournament-banner">
            <img src="~/assets/img/tournaments/@Model.Icon" alt="@Model.Name">
            <div class="tournament-icon">🏆</div>
            <span class="tournament-status-badge ongoing">Davam edir</span>
        </div>

        <div class="tournament-header-content">
            <h1 class="tournament-title">@Model.Name</h1>
            <p class="tournament-organizer">📍 @Model.City</p>

            <div class="tournament-stats-grid">
                <div class="tournament-stat-box">
                    <div class="stat-label">Mükafat Fondu</div>
                    <div class="stat-value">@Model.PrizeFund</div>
                </div>
                <div class="tournament-stat-box">
                    <div class="stat-label">Komandalar</div>
                    <div class="stat-value">@Model.CurrentTeams/@Model.MaxTeams</div>
                </div>
                <div class="tournament-stat-box">
                    <div class="stat-label">Oyun Müddəti</div>
                    <div class="stat-value">@Model.RegistrationDeadline dəq</div>
                </div>
            </div>

            <div class="tournament-progress">
                <div class="progress-bar-large">
                    <div class="progress-fill-large" style="width: 75%"></div>
                </div>
                <div class="progress-info">
                    <span>@Model.CurrentTeams komanda qeydiyyatdan keçdi</span>
                    <span>@EmptySpace yer qalıb</span>
                </div>
            </div>

            <div class="tournament-actions">
                <button class="btn btn-primary btn-large">Komanda Qeyd Et</button>
                <button class="btn btn-secondary btn-large">Paylaş</button>
            </div>
        </div>
    </div>

    <!-- Tournament Info Tabs -->
    <div class="detail-tabs">
        <button class="detail-tab active" data-tab="overview">Ümumi</button>
        <button class="detail-tab" data-tab="teams">Komandalar</button>
        <button class="detail-tab" data-tab="schedule">Oyun Cədvəli</button>
        <button class="detail-tab" data-tab="standings">Turnir Cədvəli</button>
        <button class="detail-tab" data-tab="rules">Qaydalar</button>
    </div>

    <div class="detail-content">
        <!-- Overview Tab -->
        <div class="detail-tab-content active" id="overview">
            <div class="detail-grid">
                <!-- Left Column -->
                <div class="detail-left">
                    <div class="detail-card">
                        <h3 class="detail-card-title">Turnir Məlumatları</h3>

                        <div class="detail-info-row">
                            <span class="info-label">📅 Başlama Tarixi</span>
                            <span class="info-value">1 İyun 2026</span>
                        </div>

                        <div class="detail-info-row">
                            <span class="info-label">🏁 Bitmə Tarixi</span>
                            <span class="info-value">15 İyun 2026</span>
                        </div>

                        <div class="detail-info-row">
                            <span class="info-label">📍 Məkan</span>
                            <span class="info-value">Bakı, Azərbaycan</span>
                        </div>

                        <div class="detail-info-row">
                            <span class="info-label">🏟️ Meydança</span>
                            <span class="info-value">Olimpiya Stadionu</span>
                        </div>

                        <div class="detail-info-row">
                            <span class="info-label">👥 Maksimum Komanda</span>
                            <span class="info-value">16</span>
                        </div>

                        <div class="detail-info-row">
                            <span class="info-label">💰 Giriş Haqqı</span>
                            <span class="info-value">50₼</span>
                        </div>

                        <div class="detail-info-row">
                            <span class="info-label">⏱️ Oyun Müddəti</span>
                            <span class="info-value">90 dəqiqə (2x45)</span>
                        </div>

                        <div class="detail-info-row">
                            <span class="info-label">📝 Son Qeydiyyat</span>
                            <span class="info-value">25 May 2026</span>
                        </div>
                    </div>

                    <div class="detail-card">
                        <h3 class="detail-card-title">Təşkilatçı</h3>

                        <div class="organizer-info">
                            <div class="organizer-avatar">FB</div>
                            <div>
                                <div class="organizer-name">MatchArena</div>
                                <div class="organizer-stats">15 turnir • ⭐ 4.8</div>
                            </div>
                        </div>

                        <div class="contact-info">
                            <div class="contact-item">
                                <span class="contact-icon">📞</span>
                                <span>+994 50 XXX XX XX</span>
                            </div>
                            <div class="contact-item">
                                <span class="contact-icon">✉️</span>
                                <span>info@matcharena.az</span>
                            </div>
                            <div class="contact-item">
                                <span class="contact-icon">🌐</span>
                                <span>www.matcharena.az</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Right Column -->
                <div class="detail-right">
                    <div class="detail-card">
                        <h3 class="detail-card-title">Haqqında</h3>
                        <p class="detail-description">
                            @Model.Description
                        </p>
                       
                    </div>

                

                    <div class="detail-card">
                        <h3 class="detail-card-title">Əhəmiyyətli Tarixlər</h3>

                        <div class="timeline">
                            <div class="timeline-item completed">
                                <div class="timeline-dot"></div>
                                <div class="timeline-content">
                                    <div class="timeline-date">@Model.StartTime</div>
                                    <div class="timeline-title">Qeydiyyat Başlangıcı</div>
                                </div>
                            </div>

                            <div class="timeline-item active">
                                <div class="timeline-dot"></div>
                                <div class="timeline-content">
                                    <div class="timeline-date">@Model.EndTime</div>
                                    <div class="timeline-title">Son Qeydiyyat</div>
                                </div>
                            </div>
                       
                            <div class="timeline-item">
                                <div class="timeline-dot"></div>
                                <div class="timeline-content">
                                    <div class="timeline-date">@Model.FinalTime</div>
                                    <div class="timeline-title">Final Oyunu</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Teams Tab -->
        <div class="detail-tab-content" id="teams">
            <div class="detail-card">
                <h3 class="detail-card-title">Qeydiyyatdan keçmiş komandalar (@Model.CurrentTeams)</h3>

                <div class="teams-grid">
                   @foreach (Team team in Model.Teams)
                    {
                        <div class="team-card-small">
                            <div class="team-avatar-small"><img src="~/assets/img/teams/@team.Logo" alt="@team.Name"></div>
                            <div class="team-info-small">
                                <div class="team-name-small">@team.Name</div>
                                <div class="team-stats-small">@team.PlayerCount oyunçu • ⭐ @team.Rating</div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Schedule Tab -->
        <div class="detail-tab-content" id="schedule">
            <div class="detail-card">
                <h3 class="detail-card-title">Qrup Mərhələsi - 1-ci Tur</h3>

                <div class="matches-list">
                    <div class="match-card">
                        <div class="match-date">1 İyun 2026, 18:00</div>
                        <div class="match-teams">
                            <div class="match-team">
                                <span class="match-team-name">Qarabağ Legends</span>
                                <span class="match-team-logo">Q</span>
                            </div>
                            <div class="match-vs">VS</div>
                            <div class="match-team">
                                <span class="match-team-logo">N</span>
                                <span class="match-team-name">Neftçi FC</span>
                            </div>
                        </div>
                        <div class="match-venue">📍 Olimpiya Stadionu</div>
                    </div>

                    <div class="match-card">
                        <div class="match-date">1 İyun 2026, 20:00</div>
                        <div class="match-teams">
                            <div class="match-team">
                                <span class="match-team-name">Sumqayıt Stars</span>
                                <span class="match-team-logo">S</span>
                            </div>
                            <div class="match-vs">VS</div>
                            <div class="match-team">
                                <span class="match-team-logo">K</span>
                                <span class="match-team-name">Keşlə United</span>
                            </div>
                        </div>
                        <div class="match-venue">📍 Olimpiya Stadionu</div>
                    </div>

                    <div class="match-card past">
                        <div class="match-date">2 İyun 2026, 18:00</div>
                        <div class="match-teams">
                            <div class="match-team">
                                <span class="match-team-name">Zirə Strikers</span>
                                <span class="match-team-logo">Z</span>
                            </div>
                            <div class="match-score">
                                <span class="score-value">2 - 1</span>
                            </div>
                            <div class="match-team">
                                <span class="match-team-logo">S</span>
                                <span class="match-team-name">Sabah Warriors</span>
                            </div>
                        </div>
                        <div class="match-venue">📍 Olimpiya Stadionu • Bitdi</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Standings Tab -->
        <div class="detail-tab-content" id="standings">
            <div class="detail-card">
                <h3 class="detail-card-title">Qrup A - Turnir Cədvəli</h3>

                <div class="standings-table">
                    <table class="standings">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Komanda</th>
                                <th>O</th>
                                <th>Q</th>
                                <th>B</th>
                                <th>M</th>
                                <th>+/-</th>
                                <th>X</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr class="qualified">
                                <td>1</td>
                                <td>
                                    <div class="standing-team">
                                        <span class="standing-logo">Q</span>
                                        <span>Qarabağ Legends</span>
                                    </div>
                                </td>
                                <td>3</td>
                                <td>3</td>
                                <td>0</td>
                                <td>0</td>
                                <td>+8</td>
                                <td class="points">9</td>
                            </tr>
                            <tr class="qualified">
                                <td>2</td>
                                <td>
                                    <div class="standing-team">
                                        <span class="standing-logo">N</span>
                                        <span>Neftçi FC</span>
                                    </div>
                                </td>
                                <td>3</td>
                                <td>2</td>
                                <td>1</td>
                                <td>0</td>
                                <td>+4</td>
                                <td class="points">7</td>
                            </tr>
                            <tr>
                                <td>3</td>
                                <td>
                                    <div class="standing-team">
                                        <span class="standing-logo">S</span>
                                        <span>Sumqayıt Stars</span>
                                    </div>
                                </td>
                                <td>3</td>
                                <td>1</td>
                                <td>1</td>
                                <td>1</td>
                                <td>0</td>
                                <td class="points">4</td>
                            </tr>
                            <tr>
                                <td>4</td>
                                <td>
                                    <div class="standing-team">
                                        <span class="standing-logo">K</span>
                                        <span>Keşlə United</span>
                                    </div>
                                </td>
                                <td>3</td>
                                <td>0</td>
                                <td>0</td>
                                <td>3</td>
                                <td>-12</td>
                                <td class="points">0</td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="standings-legend">
                        <span class="legend-item"><span class="legend-color qualified"></span> Playoff mərhələsinə keçdi</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Rules Tab -->
        <div class="detail-tab-content" id="rules">
            <div class="detail-card">
                <h3 class="detail-card-title">Turnir Qaydaları</h3>

                <div class="rules-content">
                    <div class="rule-section">
                        <h4 class="rule-title">1. Ümumi Qaydalar</h4>
                        <ul class="rule-list">
                            <li>Turnir FIFA qaydalarına uyğun keçirilir</li>
                            <li>Hər komanda minimum 11, maksimum 15 oyunçudan ibarət olmalıdır</li>
                            <li>Qeydiyyat haqqı - 50₼ (geri qaytarılmır)</li>
                            <li>Son qeydiyyat tarixi: 25 May 2026</li>
                        </ul>
                    </div>

                    <div class="rule-section">
                        <h4 class="rule-title">2. Oyun Formatı</h4>
                        <ul class="rule-list">
                            <li>Qrup mərhələsi: 4 komandadan ibarət 4 qrup</li>
                            <li>Hər qrupdan ilk 2 komanda playoff mərhələsinə keçir</li>
                            <li>Oyun müddəti: 2 x 45 dəqiqə</li>
                            <li>Fasilə: 15 dəqiqə</li>
                            <li>Bərabərlik halında penalti atışları</li>
                        </ul>
                    </div>

                    <div class="rule-section">
                        <h4 class="rule-title">3. Oyunçu Dəyişiklikləri</h4>
                        <ul class="rule-list">
                            <li>Hər komanda 3 dəyişiklik edə bilər</li>
                            <li>Əlavə vaxtda 1 əlavə dəyişiklik icazəsi</li>
                            <li>Dəyişilmiş oyunçu geri qayıda bilməz</li>
                        </ul>
                    </div>

                    <div class="rule-section">
                        <h4 class="rule-title">4. Xüsusi Şərtlər</h4>
                        <ul class="rule-list">
                            <li>Bütün oyunçular qeydiyyatdan keçməlidir</li>
                            <li>Şəxsiyyət vəsiqəsi və tibbi arayış tələb olunur</li>
                            <li>Forma rəngləri təşkilatçı tərəfindən təsdiqlənməlidir</li>
                            <li>Oyundan 30 dəqiqə əvvəl meydançada olunmalıdır</li>
                        </ul>
                    </div>

                    <div class="rule-section">
                        <h4 class="rule-title">5. Cəzalar</h4>
                        <ul class="rule-list">
                            <li>Sarı kart: Xəbərdarlıq (2 sarı = 1 qırmızı)</li>
                            <li>Qırmızı kart: Oyundan kənarlaşdırma + növbəti oyun cəzası</li>
                            <li>Kobud davranış: Turnirlə kənarlaşdırma</li>
                            <li>Vaxtında gəlməmə: Texniki məğlubiyyət (0:3)</li>
                        </ul>
                    </div>

                    <div class="rule-section">
                        <h4 class="rule-title">6. Etiraz və Apellyasiyalar</h4>
                        <ul class="rule-list">
                            <li>Etirazlar oyundan sonra 24 saat ərzində qəbul edilir</li>
                            <li>Yazılı şəkildə təşkilatçıya təqdim edilməlidir</li>
                            <li>Hakimin qərarı son qərardır</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>