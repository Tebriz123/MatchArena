@model HomeVM
<main>
    <div class="hero">
        <p class="intro-text">✨ Ərazinizdəki ən yaxşı platformasına xoş gəldiniz</p>
        <h1>Futbol sevginizi <span class="hero-green">birlikdə yaşayın</span></h1>
        <p class="hero-subtitle">Oyunçular tapın, komanda qurun, meydançalar rezerv edin və turnirlərdə yarışın. Bütün futbol ehtiyaclarınız üçün tam həll.</p>
        <div class="hero-buttons">
            <a href="players.html" class="btn btn-primary">Başla edin</a>
            <a href="tournaments.html" class="btn btn-secondary">Turnirləri kəşf edin</a>
        </div>
    </div>

    <div class="stats-container">
        <div class="stat-card">
            <div class="stat-number">2,500+</div>
            <div class="stat-label">Oyunçular</div>
        </div>
        <div class="stat-card">
            <div class="stat-number">150+</div>
            <div class="stat-label">Stadionlar</div>
        </div>
        <div class="stat-card">
            <div class="stat-number">85+</div>
            <div class="stat-label">Turnir</div>
        </div>
    </div>

    <h2 class="section-title">Hər şey bir yerdə</h2>
    <p class="section-subtitle">Futbol səvərlərinin tələb etdiyi bütün xidmətlər platformamızda mövcuddur.</p>

    <div class="features-grid">
        <div class="feature-card">
            <div class="feature-icon feature-icon-blue">👤</div>
            <h3>Komanda Qurma</h3>
            <p>Dostlarınızla komanda yaradın və meydançada birinə çatın.</p>
        </div>
        <div class="feature-card">
            <div class="feature-icon feature-icon-orange">⚽</div>
            <h3>Meydança Icarəsi</h3>
            <p>Ən yaxşı meydançaları rezerv edin və oyna.</p>
        </div>
        <div class="feature-card">
            <div class="feature-icon feature-icon-red">🏆</div>
            <h3>Turnir Düzəltmə</h3>
            <p>Öz turnirini dəstək edin və çempion ol.</p>
        </div>
        <div class="feature-card">
            <div class="feature-icon feature-icon-green">📊</div>
            <h3>Statistika</h3>
            <p>Rəqəmlər, qaydalar, və ətraflı analitika.</p>
        </div>
        <div class="feature-card">
            <div class="feature-icon feature-icon-purple">🤝</div>
            <h3>Şəbəkə</h3>
            <p>Həmçin futbolçuları tapın və bağlantı yaradın.</p>
        </div>
        <div class="feature-card">
            <div class="feature-icon feature-icon-pink">⭐</div>
            <h3>Reytinq Sistemi</h3>
            <p>Performansınız əsasında reytinq alın.</p>
        </div>
    </div>

    <h2 class="section-title">Ən yaxşı oyunçular</h2>
    <p class="section-subtitle">Platform üzərində ən yaxşı oyunçuları görmək üçün klikləyin.</p>

    <div class="cards-grid">
       @foreach (Player player in Model.Players)
        {
            <div class="player-card">
                <div class="card-image"><img src="~/assets/img/players/@player.Image" alt="@player.Name @player.Surname"><div class="rating">⭐ @player.Rating</div></div>
                <div class="card-content">
                    <div class="team-badge">@player.Position</div>
                    <h3 class="card-title">@player.Name @player.Surname</h3>
                    <div class="card-subtitle">@player.Age yaş • 🏠 @player.City</div>
                    <div class="card-stats"><div class="stat-item"><div class="stat-item-value">312</div><div class="stat-item-label">oyun</div></div></div>
                    <div class="card-buttons"><a href="player-detail.html?id=1" class="btn-small">Profil bax</a></div>
                </div>
            </div>
        }
    </div>

    <h2 class="section-title">Aktiv komandalar</h2>
    <p class="section-subtitle">Ən populyar komandaların bir siyahısı.</p>

    <div class="cards-grid">
       @foreach (Team team in Model.Teams)
        {
            <div class="team-card">
                <div class="card-image"><img src="~/assets/img/teams/@team.Logo" alt="@team.Name"></div>
                <div class="card-content">
                    <div class="team-badge">Oyunçu axtarır</div>
                    <h3 class="card-title">@team.Name</h3>
                    <div class="card-subtitle">Kapitain: @team.Captain • 🏠 @team.City</div>
                    <div class="card-stats">
                        <div class="stat-item"><div class="stat-item-value">@team.PlayerCount/@team.MaxPlayer</div><div class="stat-item-label">qolaça</div></div>
                        <div class="stat-item"><div class="stat-item-value">@team.Rating</div><div class="stat-item-label">⭐</div></div>
                        <div class="stat-item"><div class="stat-item-value">67</div><div class="stat-item-label">qolaça</div></div>
                    </div>
                    <div class="card-buttons">
                        <a href="team-detail.html?id=1" class="btn-small">Profil bax</a>
                        <button class="btn-small btn-small-secondary">Qoşul</button>
                    </div>
                </div>
            </div>
        }
    </div>

    <h2 class="section-title">Meydança rezervasiyası</h2>
    <p class="section-subtitle">Ən populyar futbol meydançaları siyahıda.</p>

    <div class="cards-grid">
       @foreach (Field field in Model.Fields)
        {
            <div class="field-card">
                <div class="card-image"><img src="~/assets/img/fields/@field.Image" alt="@field.Name"><div class="rating">⭐ @field.Rating</div></div>
                <div class="card-content">
                    <div class="team-badge price-badge">@field.PricePerHour₼/saat</div>
                    <h3 class="card-title">@field.Name</h3>
                    <div class="card-subtitle">🏠 @field.City</div>
                    <div class="available-hours">🕐 Boş saatlar: 5 saat</div>
                    <div class="time-slots time-slots-container">
                        @foreach (DateTime date in field.EmptySpace)
                        {
                            <button class="time-slot">@date</button>
                        }
                        
                    </div>
                    <div class="card-buttons"><a href="field-detail.html?id=1" class="btn-small">Rezerv et →</a></div>
                </div>
            </div>
        }
    </div>

    <h2 class="section-title">Turnir və çempionlaşmalar</h2>
    <p class="section-subtitle">Gələcək və cari turnirləri kəşf edin.</p>

    <div class="cards-grid">
       @foreach (Tournament tournament in Model.Tournaments)
        {
            <div class="tournament-card">
                <div class="card-image"><img src="~/assets/img/tournaments/@tournament.Logo" alt="@tournament.Name"><span class="status-badge-position">Devam edir</span></div>
                <div class="card-content">
                    <div class="prize-badge">⭐ @tournament.PrizeFund AZN</div>
                    <h3 class="card-title">@tournament.Name</h3>
                    <div class="tournament-details">
                        <div class="tournament-detail-item">📅 @tournament.EndDate</div>
                        <div class="tournament-detail-item">📍 </div>
                        <div class="tournament-detail-item">👥 @tournament.CurrentTeams/@tournament.MaxTeams komanda</div>
                    </div>
                    <div class="progress-bar"><div class="progress-fill" data-width="66.67"></div></div>
                    <div class="progress-text">@tournament.CurrentTeams/@tournament.MaxTeams komanda</div>
                    <div class="card-buttons"><a href="#" class="btn-small">Qoşul →</a></div>
                </div>
            </div>
        }
    </div>
</main>