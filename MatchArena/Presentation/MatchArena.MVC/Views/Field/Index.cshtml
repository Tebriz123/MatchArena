@model GetFieldItemVM
<main>
    <h1 class="section-title">Meydançalar</h1>
    <p class="section-subtitle">Ən yaxşı meydançaları tap və onlarını rezerv et.</p>

    <p class="fields-count">5 meydança tapıldı</p>

    <div class="cards-grid">
        @foreach (Field field in Model.Fields)
        {
            <a href="field-detail.html?id=1" class="field-card field-card-link">
                <div class="card-image"><img src="~/assets/img/fields/@field.Image" alt="@field.Name"><div class="rating">⭐ @field.Rating</div></div>
                <div class="card-content">
                    <div class="team-badge field-price-badge">@field.PricePerHour₼/saat</div>
                    <h3 class="card-title">@field.Name</h3>
                    <div class="card-subtitle">🏠 @field.Address</div>
                    <div class="field-info-text">📏 40 x 20 m • 🕐 @field.StartTime - @field.EndTime</div>
                    <div class="field-review-text">⭐ @field.Rating (127 rəy)</div>
                    <div class="card-buttons"><span class="btn-small">Rezerv et →</span></div>
                </div>
            </a>
        }
    </div>
</main>