@model PutFieldVM
<main>
    <div class="form-container">
        <h1 class="section-title">Yeni Meydança Yarat</h1>
        <p class="section-subtitle">Yeni futbol meydançası əlavə edin</p>

        <form class="create-form" id="createFieldForm">
            <div class="form-section">
                <h3 class="form-section-title">Əsas Məlumatlar</h3>

                <div class="form-group">
                    <label asp-for="Name" class="form-label">Name *</label>
                    <input asp-for="Name" class="form-input" placeholder="Field Name">
                    <span asp-validation-for="Name"></span>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="City" class="form-label">City *</label>
                        <input asp-for="City" class="form-input" placeholder="City">
                        <span asp-validation-for="City"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Address" class="form-label">Address *</label>
                    <input asp-for="Address" class="form-input" placeholder="Address">
                    <span asp-validation-for="Address"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PrimaryPhoto" class="form-label">Primary Photo *</label>
                    <input asp-for="PrimaryPhoto" class="form-input" accept="image/*" required>
                    <span asp-validation-for="PrimaryPhoto"></span>

                </div>

                <div class="form-group">
                    <label asp-for="AdditionalPhotos" class="form-label">Additional Photo</label>
                    <input asp-for="AdditionalPhotos" class="form-input" accept="image/*">
                    <span asp-validation-for="AdditionalPhotos"></span>

                </div>
            </div>

            <div class="form-section">
                <h3 class="form-section-title">Qiymət və Əlaqə</h3>

                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="PricePerHour" class="form-label">Saatlıq Qiymət (₼) *</label>
                        <input asp-for="PricePerHour" class="form-input" placeholder="Price">
                        <span asp-validation-for="PricePerHour"></span>
                    </div>


                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="contactPhone" class="form-label">Əlaqə Telefonu *</label>
                        <input type="tel" id="contactPhone" name="contactPhone" class="form-input" required placeholder="+994 XX XXX XX XX">
                    </div>

                    <div class="form-group">
                        <label for="contactEmail" class="form-label">Email</label>
                        <input type="email" id="contactEmail" name="contactEmail" class="form-input" placeholder="info@example.com">
                    </div>
                </div>


            </div>

            <div class="form-section">
                <h3 class="form-section-title">İş Saatları</h3>

                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="StartTime" class="form-label">Açılış Saatı</label>
                        <input asp-for="StartTime" class="form-input">
                        <span asp-validation-for="StartTime"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="EndTime" class="form-label">Bağlanış Saatı</label>
                        <input asp-for="EndTime" class="form-input">
                        <span asp-validation-for="EndTime"></span>
                    </div>
                </div>
            </div>

            <div class="form-section">
                <h3 class="form-section-title">Əlavə Məlumatlar</h3>

                <div class="form-group">
                    <label asp-for="FieldInformation" class="form-label">Field Information</label>
                    <textarea asp-for="FieldInformation" class="form-textarea" rows="4" placeholder="Meydança haqqında məlumat yazın..."></textarea>
                    <span asp-validation-for="FieldInformation"></span>
                </div>
            </div>

            <div class="form-actions">
                <button type="button" class="btn btn-secondary" onclick="window.location.href='fields.html'">Ləğv et</button>
                <button type="submit" class="btn btn-primary">Meydança Yarat</button>
            </div>
        </form>
    </div>
</main>